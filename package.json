{
  "name": "rnw-community",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "build": "lerna run build --stream",
    "lint": "lerna run lint --parallel",
    "lint:fix": "lerna run lint:fix  --parallel",
    "test": "yarn jest",
    "test:coverage": "yarn jest --coverage",
    "cpd": "yarn jscpd packages",
    "format": "lerna run format --parallel",
    "find-deadcode": "ts-prune | grep -v dist | grep -v index.ts",
    "ci": "yarn build && yarn lint && yarn test:coverage && yarn cpd",
    "clear": "lerna run clear --parallel",
    "deps:clear": "lerna run clear:deps --parallel && yarn deps:clear:root",
    "deps:clear:root": "rm -rf ./node_modules",
    "postinstall": "lerna run build --stream",
    "preversion": "yarn format && yarn ci",
    "version": "git add -A packages",
    "postversion": "git push && git push --tags"
  },
  "devDependencies": {
    "@babel/core": "^7.14.2",
    "@babel/preset-env": "^7.14.2",
    "@babel/preset-typescript": "^7.13.0",
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@types/jest": "^25.2.1",
    "husky": "^4.2.3",
    "jest": "^25.3.0",
    "jscpd": "^3.3.25",
    "lerna": "^4.0.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.0",
    "ts-prune": "^0.9.1",
    "@typescript-eslint/eslint-plugin": "^4.23.1-alpha.8",
    "@typescript-eslint/parser": "^4.23.1-alpha.8",
    "@react-native-community/eslint-config": "^2.0.0",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard-with-typescript": "^20.0.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.23.0",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-native": "^3.10.0",
    "eslint-plugin-rxjs": "^3.3.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-standard": "^5.0.0",
    "typescript": "^4.2.4"
  }
}
