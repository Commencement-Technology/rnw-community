{
  "name": "rnw-community",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "ts": "lerna run ts --parallel",
    "build": "lerna run build --stream",
    "lint": "lerna run lint --parallel",
    "lint:fix": "lerna run lint:fix  --parallel",
    "test": "yarn jest",
    "test:coverage": "yarn jest --coverage",
    "cpd": "yarn jscpd packages",
    "format": "lerna run format --parallel",
    "find-deadcode": "ts-prune",
    "ci": "yarn build && yarn ts && yarn lint && yarn find-deadcode && yarn cpd && yarn test:coverage",
    "clear": "lerna run clear --parallel",
    "deps:clear": "lerna run clear:deps --parallel && yarn deps:clear:root",
    "deps:clear:root": "rm -rf ./node_modules",
    "postinstall": "lerna run build --stream",
    "preversion": "yarn format",
    "version": "git add -A packages",
    "postversion": "git push && git push --tags"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.18.9",
    "@babel/plugin-proposal-decorators": "^7.18.9",
    "@babel/preset-env": "^7.18.9",
    "@babel/preset-typescript": "^7.18.6",
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@commitlint/config-lerna-scopes": "^17.0.2",
    "@react-native-community/eslint-config": "^3.0.3",
    "@types/jest": "^28.1.6",
    "@types/node": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "5.29.0",
    "@typescript-eslint/parser": "^5.30.7",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard-with-typescript": "^22.0.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.6.0",
    "eslint-plugin-n": "^15.2.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-native": "^4.0.0",
    "eslint-plugin-rxjs": "^5.0.2",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-standard": "^5.0.0",
    "eslint-plugin-typescript-sort-keys": "^2.1.0",
    "husky": "^8.0.1",
    "jest": "^28.1.3",
    "jscpd": "^3.4.5",
    "lerna": "^5.1.8",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "reflect-metadata": "^0.1.13",
    "ts-prune": "^0.10.3",
    "typescript": "^4.7.4",
    "caniuse-lite": "^1.0.30001370",
    "rimraf": "^3.0.2"
  }
}
