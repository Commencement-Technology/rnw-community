{
  "name": "rnw-community",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "ts": "lerna run ts --parallel",
    "build": "lerna run build --stream",
    "lint": "lerna run lint --parallel",
    "lint:fix": "lerna run lint:fix  --parallel",
    "test": "yarn jest",
    "test:coverage": "yarn jest --coverage",
    "cpd": "yarn jscpd packages",
    "format": "lerna run format --parallel",
    "find-deadcode": "ts-prune",
    "ci": "yarn build && yarn ts && yarn lint && yarn find-deadcode && yarn test:coverage && yarn cpd",
    "clear": "lerna run clear --parallel",
    "deps:clear": "lerna run clear:deps --parallel && yarn deps:clear:root",
    "deps:clear:root": "rm -rf ./node_modules",
    "postinstall": "lerna run build --stream",
    "preversion": "yarn format && yarn ci && yarn build",
    "version": "git add -A packages",
    "postversion": "git push && git push --tags"
  },
  "devDependencies": {
    "reflect-metadata": "^0.1.13",
    "@babel/core": "^7.15.8",
    "@babel/preset-env": "^7.15.8",
    "@babel/preset-typescript": "^7.15.0",
    "@babel/plugin-proposal-decorators": "^7.15.8",
    "@commitlint/cli": "^13.2.1",
    "@commitlint/config-conventional": "^13.2.0",
    "@commitlint/config-lerna-scopes": "^13.2.0",
    "@react-native-community/eslint-config": "^2.0.0",
    "@types/jest": "^27.0.2",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "@types/node": "^16.11.4",
    "eslint": "^8.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard-with-typescript": "^21.0.1",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jest": "^25.2.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.1",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-react-native": "^3.11.0",
    "eslint-plugin-rxjs": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-standard": "^5.0.0",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "jscpd": "^3.3.26",
    "lerna": "^4.0.0",
    "lint-staged": "^11.2.3",
    "prettier": "^2.4.1",
    "ts-prune": "^0.10.1",
    "typescript": "^4.4.4"
  }
}
