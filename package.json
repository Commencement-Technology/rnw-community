{
  "name": "rnw-community",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "build": "lerna run build --stream",
    "lint": "lerna run lint --parallel",
    "lint:fix": "lerna run lint:fix  --parallel",
    "test": "yarn jest",
    "test:coverage": "yarn jest --coverage",
    "cpd": "yarn jscpd packages",
    "format": "lerna run format --parallel",
    "find-deadcode": "ts-prune | grep -v dist | grep -v index.ts",
    "ci": "yarn build && yarn lint && yarn test:coverage && yarn cpd",
    "clear": "lerna run clear --parallel",
    "deps:clear": "lerna run clear:deps --parallel && yarn deps:clear:root",
    "deps:clear:root": "rm -rf ./node_modules",
    "postinstall": "lerna run build --stream",
    "preversion": "yarn format && yarn ci",
    "version": "git add -A packages",
    "postversion": "git push && git push --tags"
  },
  "devDependencies": {
    "@babel/core": "^7.14.2",
    "@babel/preset-env": "^7.14.2",
    "@babel/preset-typescript": "^7.13.0",
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@types/jest": "^25.2.1",
    "husky": "^4.2.3",
    "jest": "^25.3.0",
    "jscpd": "^3.3.25",
    "lerna": "^4.0.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.0",
    "ts-prune": "^0.9.1",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^9.0.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-etc": "^1.13.9",
    "tslint-import-group-ordering": "^2.1.2",
    "tslint-microsoft-contrib": "^6.2.0",
    "tslint-origin-ordered-imports-rule": "^1.3.0-0",
    "tslint-sonarts": "^1.9.0",
    "typescript": "^4.2.4"
  }
}
