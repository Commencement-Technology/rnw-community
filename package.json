{
  "name": "rnw-community",
  "version": "0.0.1",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "build": "lerna run build",
    "lint": "lerna run lint --parallel",
    "lint:fix": "lerna run lint:fix  --parallel",
    "test": "yarn jest",
    "test:coverage": "yarn jest --coverage",
    "cpd": "yarn jscpd packages",
    "format": "lerna run format --parallel",
    "find-deadcode": "ts-prune | grep -v dist | grep -v index.ts",
    "ci": "yarn build && yarn lint && yarn test:coverage && yarn cpd",
    "clear": "lerna run clear --parallel",
    "deps:clear": "lerna run clear:deps --parallel && yarn deps:clear:root",
    "deps:clear:root": "rm -rf ./node_modules",
    "prepare": "yarn build",
    "preversion": "yarn ci",
    "version": "yarn format && git add -A src",
    "postversion": "git push && git push --tags",
    "prepublish": "yarn format"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.5",
    "@babel/preset-typescript": "^7.9.0",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@types/jest": "^25.2.1",
    "husky": "^4.2.3",
    "jest": "^25.3.0",
    "jscpd": "^3.1.0",
    "lerna": "^3.20.2",
    "lint-staged": "^10.1.2",
    "prettier": "^2.0.4",
    "ts-prune": "0.3.0",
    "tslint": "^6.1.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^9.0.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-etc": "^1.10.1",
    "tslint-import-group-ordering": "^2.1.2",
    "tslint-microsoft-contrib": "^6.2.0",
    "tslint-origin-ordered-imports-rule": "^1.2.2",
    "tslint-sonarts": "^1.9.0",
    "typescript": "3.8.3"
  }
}
