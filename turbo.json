{
    "$schema": "https://turborepo.org/schema.json",
    "pipeline": {
        "topo": {
            "dependsOn": ["^topo"]
        },
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**"]
        },
        "ts": {
            "dependsOn": ["^topo"],
            "outputs": []
        },
        "lint": {
            "dependsOn": ["^topo"],
            "outputs": []
        },
        "lint:fix": {
            "dependsOn": ["^topo"],
            "outputs": []
        },
        "format": {
            "outputs": []
        },
        "clear": {
            "outputs": []
        },
        "clear:deps": {
            "outputs": []
        },
        "test": {

        },
        "test:coverage": {
            "outputs": ["coverage/**"]
        },
        "//#cpd": {
            "outputs": ["report/jscpd/**"]
        },
        "//#deadcode": {
            "outputs": []
        }
    },
    "globalDependencies": [
        "tsconfig*.json"
    ]
}
