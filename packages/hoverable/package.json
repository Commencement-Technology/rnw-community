{
  "name": "@rnw-community/hoverable",
  "version": "0.0.18",
  "private": false,
  "description": "Hover support for React native elements in React native web",
  "keywords": [
    "hover",
    "hoverable",
    "withHover",
    "onHover",
    "react",
    "react-native",
    "react native",
    "react-native-web"
  ],
  "repository": "https://github.com/rnw-community/rnw-community/tree/master/packages/hoverable",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "!**/*.spec.*"
  ],
  "sideEffects": "false",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc -b --pretty",
    "lint": "tslint --format stylish --project tsconfig.json",
    "lint:fix": "yarn lint --fix",
    "test": "yarn jest",
    "test:coverage": "yarn jest --coverage",
    "format": "prettier --write \"./src/**/*.{ts,tsx}\"",
    "clear": "rm -rf coverage && rm -rf dist",
    "clear:deps": "rm -rf ./node_modules && rm -rf ./dist"
  },
  "dependencies": {
    "@rnw-community/shared": "^0.0.18"
  },
  "devDependencies": {
    "@testing-library/jest-native": "^3.1.0",
    "@testing-library/react-native": "^5.0.3",
    "@types/react": "^16.9.34",
    "@types/react-native": "^0.62.4",
    "@types/react-test-renderer": "^16.9.2",
    "react": "^16.13.1",
    "react-native": "^0.61.5",
    "react-test-renderer": "^16.13.1"
  },
  "peerDependencies": {
    "react": "^16.13.0",
    "react-native": "^0.61.5"
  },
  "gitHead": "b5608910319390f9773a9d42c3cc828e8e8a1d95"
}
