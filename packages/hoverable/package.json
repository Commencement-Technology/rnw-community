{
  "name": "@rnw-community/hoverable",
  "version": "0.22.0",
  "private": false,
  "description": "Hover support for React native elements in React native web",
  "keywords": [
    "hover",
    "hoverable",
    "withHover",
    "onHover",
    "react",
    "react-native",
    "react native",
    "react-native-web"
  ],
  "repository": "https://github.com/rnw-community/rnw-community/tree/master/packages/hoverable",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "sideEffects": "false",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "ts": "tsc --pretty -p tsconfig.json",
    "build": "tsc --pretty -p tsconfig.build.json",
    "postbuild": "rm -rf ./dist/*.tsbuildinfo",
    "lint": "yarn eslint src",
    "lint:fix": "yarn lint --fix src",
    "test": "yarn jest",
    "test:coverage": "yarn jest --coverage",
    "format": "prettier --write \"./src/**/*.{ts,tsx}\"",
    "clear": "rm -rf coverage && rm -rf dist && rm -f *.tsbuildinfo",
    "clear:deps": "rm -rf ./node_modules && rm -rf ./dist"
  },
  "dependencies": {
    "@rnw-community/shared": "^0.22.0"
  },
  "devDependencies": {
    "@testing-library/jest-native": "^4.0.1",
    "@testing-library/react-native": "^8.0.0-rc.1",
    "@types/react": "^17.0.14",
    "@types/react-native": "^0.64.12",
    "@types/react-test-renderer": "^17.0.1",
    "react": "^17.0.2",
    "react-native": "^0.64.1",
    "react-test-renderer": "^17.0.2"
  },
  "peerDependencies": {
    "react": "^17.0.2",
    "react-native": "^0.64.1"
  },
  "gitHead": "b5608910319390f9773a9d42c3cc828e8e8a1d95"
}
