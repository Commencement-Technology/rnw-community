{
  "name": "@rnw-community/hoverable",
  "version": "0.48.0",
  "description": "Hover support for React native elements in React native web",
  "keywords": [
    "hover",
    "hoverable",
    "withHover",
    "onHover",
    "react",
    "react-native",
    "react native",
    "react-native-web"
  ],
  "repository": "https://github.com/rnw-community/rnw-community/tree/master/packages/hoverable",
  "license": "MIT",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "sideEffects": "false",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "ts": "run -T tsc --pretty -p tsconfig.json",
    "build:esm": "run -T tsc --pretty -p tsconfig.build-cjs.json",
    "build:cjs": "run -T tsc --pretty -p tsconfig.build-esm.json",
    "build": "yarn build:esm && yarn build:cjs",
    "postbuild": "rm -rf ./dist/*/*.tsbuildinfo",
    "lint": "run -T eslint src",
    "lint:fix": "run -T eslint --fix src",
    "test": "run -T jest",
    "test:coverage": "run -T jest --coverage",
    "format": "run -T prettier --write \"./src/**/*.{ts,tsx}\"",
    "clear": "rm -rf coverage && rm -rf dist && rm -f *.tsbuildinfo",
    "clear:deps": "rm -rf ./node_modules && rm -rf ./dist"
  },
  "devDependencies": {
    "@rnw-community/shared": "^0.48.0",
    "@testing-library/jest-native": "^4.0.1",
    "@testing-library/react-native": "^8.0.0-rc.1",
    "@types/react": "^17.0.14",
    "@types/react-native": "^0.64.12",
    "@types/react-test-renderer": "^17.0.1",
    "react": "^17.0.2",
    "react-native": "^0.64.1",
    "react-test-renderer": "^17.0.2"
  },
  "peerDependencies": {
    "@rnw-community/shared": "^0.45.0",
    "react": "^17.0.2",
    "react-native": "^0.64.1"
  },
  "gitHead": "b5608910319390f9773a9d42c3cc828e8e8a1d95"
}
